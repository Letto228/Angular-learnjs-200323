{
	"$schema": "https://json.schemastore.org/prettierrc",
	"htmlWhitespaceSensitivity": "ignore",
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"singleQuote": true,
	"printWidth": 90,
	"endOfLine": "lf",
	"bracketSpacing": false,
	"arrowParens": "avoid",
	"attributeGroups": [
		"$ANGULAR_STRUCTURAL_DIRECTIVE",
		"$ANGULAR_ELEMENT_REF",
		"$ID",
		"$DEFAULT",
		"$CLASS",
		"^\\[class\\.",
		"$ANGULAR_INPUT",
		"$ANGULAR_TWO_WAY_BINDING",
		"$ANGULAR_OUTPUT"
	]
}
